<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="81dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="Nombre de la tarea"
        app:layout_constraintStart_toEndOf="@+id/activaTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activaTextView"
        android:layout_width="61dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Estado de la tarea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btEditTarea"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="@string/button2"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/nombreTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDeleteTarea"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="@string/button3"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/btEditTarea"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>